qemu-system-arm -m 512 -hda rpi-basic-image-raspberrypi2-20150227091441.rootfs.rpi-sdimg -M vexpress-a9 -cpu cortex-a9 -kernel vmlinuz-3.2.0-4-vexpress -initrd initrd.gz -append "root=/dev/sda" 


